<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mdo3.overhaul.DriverMainScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_logout"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="320dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="21dp"
            android:text="Logout" />

        <Button
            android:id="@+id/button_settings"
            tools:layout_editor_absoluteX="500dp"
            tools:layout_editor_absoluteY="256dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_logout"
            android:layout_alignBottom="@+id/button_logout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:text="settings" />

        <Button
            android:id="@+id/button_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="39dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Placeholder" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>